<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Plants>
    <Plant id="PeaShooter">
        <Name>豌豆射手</Name>
        <Description>
            豌豆射手，你的第一道防线。它们通过发射豌豆来攻击僵尸。
        </Description>
        <Sunshine>100</Sunshine>
        <Cooldown>15</Cooldown>
        <Hp>200</Hp>
        <Render>
            <Atlas>reanim-spine/pea_shooter.atlas</Atlas>
            <Skeleton>reanim-spine/pea_shooter.skel</Skeleton>
        </Render>
        <Shoot>
            <Cooldown>1.5</Cooldown>
            <Projectile>
                <Type>Pea</Type>
                <Track>
                    <Line direction="0" />
                </Track>
                <Timing>0.15</Timing>
                <OffsetX>34.202</OffsetX>
                <OffsetY>61.781</OffsetY>
            </Projectile>
        </Shoot>
    </Plant>
    <Plant id="Sunflower">
        <Name>向日葵</Name>
        <Description>
            为你提供额外的阳光。
        </Description>
        <Sunshine>50</Sunshine>
        <Cooldown>15</Cooldown>
        <Hp>200</Hp>
        <Render>
            <Atlas>reanim-spine/sunflower.atlas</Atlas>
            <Skeleton>reanim-spine/sunflower.skel</Skeleton>
        </Render>
        <Produce>
            <Cooldown>15</Cooldown>
            <CooldownSpread>10</CooldownSpread>
            <Product>
                <Resource>Sunshine</Resource>
                <Timing>1.0</Timing>
                <OffsetX>-6.347</OffsetX>
                <OffsetY>48.632</OffsetY>
            </Product>
        </Produce>
    </Plant>
    <Plant id="CherryBomb">
        <Name>樱桃炸弹</Name>
        <Description>立即爆炸，并对周围僵尸造成大量伤害。</Description>
        <Sunshine>150</Sunshine>
        <Cooldown>60</Cooldown>
        <Hp>200</Hp>
        <Render>
            <Atlas>reanim-spine/cherry_bomb.atlas</Atlas>
            <Skeleton>reanim-spine/cherry_bomb.skel</Skeleton>
        </Render>
        <Instant>
            <AnimTime>1</AnimTime>
            <EnterSound>sounds/reverse_explosion.ogg</EnterSound>
            <Effect>
                <Type>
                    <Explode radius="130" />
                </Type>
                <Time>1.0</Time>
                <Sound>sounds/cherrybomb.ogg</Sound>
                <Particle>CherryBomb</Particle>
            </Effect>
        </Instant>
    </Plant>
    <Plant id="WallNut">
        <Name>坚果墙</Name>
        <Description>挡住僵尸，保护它背后的植物。</Description>
        <Sunshine>50</Sunshine>
        <Cooldown>30</Cooldown>
        <Hp>4000</Hp>
        <Render>
            <Atlas>reanim-spine/wall_nut.atlas</Atlas>
            <Skeleton>reanim-spine/wall_nut.skel</Skeleton>
            <DamageSkin>true</DamageSkin>
        </Render>
    </Plant>
    <Plant id="ExplodeNut">
        <Name>爆炸坚果</Name>
        <Render>
            <Atlas>reanim-spine/explode_nut.atlas</Atlas>
            <Skeleton>reanim-spine/explode_nut.skel</Skeleton>
        </Render>
        <Bowling>
            <Explode>130</Explode>
        </Bowling>
    </Plant>
</Plants>